<h2>Product List</h2>

<div class="pull-right">
  <%= link_to("Add a job", new_admin_product_path, :class => "btn btn-default") %>
</div>

<br>
<hr>

<table class="table table-bordered">

  <thead>
    <tr>
      <td>#</td>
      <td>品名</td>
      <td>描述</td>
      <td>库存</td>
      <td>价格</td>
      <td>选项</td>
      <td>创建时间</td>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.id %>
      </td>
      <td>
        <%= product.title %>
      </td>
      <td>
        <%= product.description %>
      </td>
      <td>
        <%= product.quantity %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <%= link_to("Edit", edit_admin_product_path(product)) %> |
        <%= link_to("Destroy", admin_product_path(product), :method => :delete) %>
      </td>
      <td>
        <%= product.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
