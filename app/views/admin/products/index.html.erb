<h2>Product List</h2>

<div class="pull-right">
  <%= link_to("Add a job", new_admin_product_path, :class => "btn btn-default") %>
</div>

<br>
<hr>

<table class="table table-bordered">

  <thead>
    <tr>
      <th>#</th>
      <th>品名</th>
      <th>照片</th>
      <th>库存</th>
      <td>价格</th>
      <th>选项</th>

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.id %>
      </td>
      <td>
        <%= product.title %>
      </td>
      <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
      </td>
      <td>
        <%= product.quantity %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <%= link_to("Edit", edit_admin_product_path(product)) %> |
        <%= link_to("Destroy", admin_product_path(product), :method => :delete) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
